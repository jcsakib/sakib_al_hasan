                    <div class="footer-col"><h3 class="font-logo text-3xl text-white mb-4">Sakib</h3><p class="text-gray-500">Architecting the future of the web, one line of code at a time.</p></div>
                    <div class="footer-col"><h4 class="text-lg font-semibold text-white mb-4 tracking-wider">Quick Links</h4><ul class="space-y-3"><li><a href="#about" class="text-gray-400 hover:text-white transition-colors">About</a></li><li><a href="#services" class="text-gray-400 hover:text-white transition-colors">Services</a></li><li><a href="#projects" class="text-gray-400 hover:text-white transition-colors">Projects</a></li><li><a href="#contact" class="text-gray-400 hover:text-white transition-colors">Contact</a></li></ul></div>
                    <div class="footer-col"><h4 class="text-lg font-semibold text-white mb-4 tracking-wider">Contact</h4><ul class="space-y-3 text-gray-400"><li>raymonmedlock674@gmail.com</li><li>+880 1305 623-733</li></ul></div>
                    <div class="footer-col"><h4 class="text-lg font-semibold text-white mb-4 tracking-wider">Follow</h4><div class="flex justify-center md:justify-start space-x-6"><a href="#" class="text-gray-400 hover:text-white transition-all duration-300 transform hover:scale-125"><svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.03998C6.48 2.03998 2 6.51998 2 12.04C2 16.86 5.14 20.93 9.5 21.84V14.3H6.5V12.04H9.5V9.93998C9.5 7.00998 11.32 5.31998 13.91 5.31998C15.16 5.31998 16.22 5.51998 16.5 5.57998V7.91998H15.19C13.84 7.91998 13.5 8.68998 13.5 9.61998V12.04H16.34L15.89 14.3H13.5V21.91C18.41 21.2 22 17.06 22 12.04C22 6.51998 17.52 2.03998 12 2.03998Z"/></svg></a><a href="#" class="text-gray-400 hover:text-white transition-all duration-300 transform hover:scale-125"><svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M22.46,6C21.69,6.35 20.86,6.58 20,6.69C20.88,6.16 21.56,5.32 21.88,4.31C21.05,4.81 20.13,5.16 19.16,5.36C18.37,4.5 17.26,4 16,4C13.65,4 11.73,5.92 11.73,8.29C11.73,8.63 11.77,8.96 11.84,9.28C8.28,9.09 5.11,7.38 3,4.79C2.63,5.42 2.42,6.16 2.42,6.94C2.42,8.43 3.17,9.75 4.33,10.5C3.62,10.5 2.96,10.3 2.38,10C2.38,10 2.38,10 2.38,10.03C2.38,12.11 3.86,13.85 5.82,14.24C5.46,14.34 5.08,14.39 4.69,14.39C4.42,14.39 4.15,14.36 3.89,14.31C4.43,16 6,17.26 7.89,17.29C6.43,18.45 4.58,19.13 2.56,19.13C2.22,19.13 1.88,19.11 1.54,19.07C3.44,20.29 5.7,21 8.12,21C16,21 20.33,14.46 20.33,8.79C20.33,8.6 20.33,8.42 20.32,8.23C21.16,7.63 21.88,6.87 22.46,6Z"/></svg></a><a href="#" class="text-gray-400 hover:text-white transition-all duration-300 transform hover:scale-125"><svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/></svg></a></div></div>
                </div>
                <div class="mt-12 pt-8 border-t border-gray-900 text-center text-gray-600"><p id="copyright">&copy; 2024 Sakib Al Hasan. All Rights Reserved.</p></div>
            </div>
        </footer>
    </div>
    
    <div id="project-modal-overlay" class="hidden fixed inset-0 bg-black/80 backdrop-blur-sm z-[100]"></div>
    <div id="project-modal" class="hidden fixed top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-11/12 max-w-4xl h-[90vh] bg-black border border-gray-800 rounded-lg shadow-2xl z-[101] flex flex-col">
        <div class="relative"><img id="modal-img" src="" alt="Project Image" class="w-full h-48 object-cover"><button id="modal-close-btn" class="absolute top-4 right-4 text-white bg-black/50 rounded-full p-2 hover:bg-black/80 transition-colors"><svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" /></svg></button></div>
        <div class="p-6 border-b border-gray-800"><h3 id="modal-title" class="text-3xl font-bold text-white"></h3></div>
        <div class="flex border-b border-gray-800 px-6"><button class="modal-tab active text-white py-3 px-4 border-b-2 border-white" data-tab="details">Details</button><button class="modal-tab text-gray-400 py-3 px-4 border-b-2 border-transparent" data-tab="live">Live Preview</button></div>
        <div class="p-6 overflow-y-auto flex-grow"><div id="modal-details-content"><div id="modal-tags" class="flex flex-wrap gap-2 mb-4"></div><p id="modal-description" class="text-gray-300"></p></div><div id="modal-live-preview" class="hidden h-full"><iframe src="" title="Live Project Preview"></iframe></div></div>
    </div>

    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/9.17.1/firebase-app.js";
        import { getFirestore, collection, onSnapshot } from "https://www.gstatic.com/firebasejs/9.17.1/firebase-firestore.js";

        let app, db;
        let projectsData = [], testimonialsData = [];
        const isFirebaseConfigured = window.firebaseConfig && window.firebaseConfig.apiKey !== "YOUR_API_KEY";

        if (isFirebaseConfigured) {
            try {
                app = initializeApp(window.firebaseConfig);
                db = getFirestore(app);
            } catch (e) { console.error("Firebase initialization failed:", e); }
        }

        const mockProjects = [
            { id: '1', title: 'E-commerce Platform', category: 'Web App', img: 'https://placehold.co/600x400/000000/FFFFFF?text=E-commerce', description: 'A full-featured e-commerce site...', tags: 'React,Node.js,MongoDB', liveUrl: 'https://react.dev/' },
            { id: '2', title: 'Task Management App', category: 'Web App', img: 'https://placehold.co/600x400/000000/FFFFFF?text=Task+Manager', description: 'A sleek and intuitive task manager...', tags: 'React,Firebase', liveUrl: 'https://vuejs.org/' },
        ];
        const mockTestimonials = [
            { id: '1', name: 'Jane Doe', company: 'CEO, Innovate', quote: 'Sakib is a truly exceptional developer. His attention to detail and creative problem-solving skills were instrumental to our project\'s success.' },
            { id: '2', name: 'John Smith', company: 'PM, Creative Tech', quote: 'Working with Sakib was a pleasure. He delivered a high-quality product on time and was always responsive to feedback.' },
        ];

        async function fetchProjects() {
            if (!isFirebaseConfigured) {
                projectsData = mockProjects;
                renderProjects();
                return;
            }
            onSnapshot(collection(db, "projects"), (snapshot) => {
                projectsData = snapshot.docs.map(doc => ({ id: doc.id, ...doc.data() }));
                renderProjects();
            });
        }

        async function fetchTestimonials() {
            if (!isFirebaseConfigured) {
                testimonialsData = mockTestimonials;
                renderTestimonials();
                return;
            }
            onSnapshot(collection(db, "testimonials"), (snapshot) => {
                testimonialsData = snapshot.docs.map(doc => ({ id: doc.id, ...doc.data() }));
                renderTestimonials();
            });
        }

        const projectsGrid = document.getElementById('projects-grid');
        function renderProjects(filter = 'All') {
            if (!projectsGrid) return;
            projectsGrid.innerHTML = '';
            const filteredProjects = filter === 'All' ? projectsData : projectsData.filter(p => p.category === filter);
            filteredProjects.forEach((project) => {
                const card = document.createElement('div');
                card.className = 'project-card rounded-lg overflow-hidden cursor-pointer';
                card.innerHTML = `<img src="${project.img}" alt="${project.title}" class="w-full h-48 object-cover"><div class="p-6"><h3 class="text-2xl font-bold text-white mb-2">${project.title}</h3><p class="text-gray-400 mb-4">${project.category}</p><span class="text-white hover:underline">View Details &rarr;</span></div>`;
                card.dataset.id = project.id;
                projectsGrid.appendChild(card);
            });
            gsap.from(projectsGrid.children, { y: 50, opacity: 0, stagger: 0.1, duration: 0.8 });
        }

        const testimonialSlider = document.getElementById('testimonial-slider');
        function renderTestimonials() {
            if (!testimonialSlider || testimonialsData.length === 0) return;
            testimonialSlider.innerHTML = '';
            testimonialsData.forEach((testimonial, index) => {
                const slide = document.createElement('div');
                slide.className = `testimonial-slide absolute inset-0 ${index === 0 ? 'active' : ''}`;
                slide.innerHTML = `<p class="text-2xl text-gray-300 italic">"${testimonial.quote}"</p><div class="mt-6"><p class="font-bold text-white text-lg">${testimonial.name}</p><p class="text-gray-400">${testimonial.company}</p></div>`;
                testimonialSlider.appendChild(slide);
            });

            let currentSlide = 0;
            const slides = testimonialSlider.querySelectorAll('.testimonial-slide');
            if (slides.length > 1) {
                setInterval(() => {
                    const nextSlide = (currentSlide + 1) % slides.length;
                    gsap.to(slides[currentSlide], { autoAlpha: 0, duration: 0.5 });
                    slides[currentSlide].classList.remove('active');
                    gsap.fromTo(slides[nextSlide], { autoAlpha: 0, y: 20 }, { autoAlpha: 1, y: 0, duration: 0.5, delay: 0.5 });
                    slides[nextSlide].classList.add('active');
                    currentSlide = nextSlide;
                }, 5000);
            }
        }

        const modalOverlay = document.getElementById('project-modal-overlay');
        const modal = document.getElementById('project-modal');
        const modalTabs = document.querySelectorAll('.modal-tab');
        
        modalTabs.forEach(tab => {
            tab.addEventListener('click', () => {
                modalTabs.forEach(t => t.classList.remove('active', 'text-white', 'border-white'));
                tab.classList.add('active', 'text-white', 'border-white');
                const tabName = tab.dataset.tab;
                document.getElementById('modal-details-content').style.display = tabName === 'details' ? 'block' : 'none';
                document.getElementById('modal-live-preview').style.display = tabName === 'live' ? 'block' : 'none';
            });
        });

        if(projectsGrid) {
            projectsGrid.addEventListener('click', (e) => {
                const card = e.target.closest('.project-card');
                if (card) {
                    const project = projectsData.find(p => p.id === card.dataset.id);
                    if (!project) return;
                    document.querySelector('.modal-tab[data-tab="details"]').click();
                    document.getElementById('modal-img').src = project.img;
                    document.getElementById('modal-title').textContent = project.title;
                    document.getElementById('modal-description').textContent = project.description;
                    document.getElementById('modal-live-preview').querySelector('iframe').src = project.liveUrl || '';
                    const tagsContainer = document.getElementById('modal-tags');
                    tagsContainer.innerHTML = '';
                    (project.tags || '').split(',').forEach(tag => {
                        const tagEl = document.createElement('span');
                        tagEl.className = 'bg-gray-800 text-gray-300 text-xs font-semibold px-2.5 py-1 rounded-full';
                        tagEl.textContent = tag.trim();
                        tagsContainer.appendChild(tagEl);
                    });
                    modalOverlay.classList.remove('hidden');
                    modal.classList.remove('hidden');
                    gsap.to(modalOverlay, { autoAlpha: 1, duration: 0.3 });
                    gsap.to(modal, { autoAlpha: 1, scale: 1, duration: 0.4, ease: 'back.out(1.7)' });
                }
            });
        }

        function closeModal() {
            gsap.to(modal, { autoAlpha: 0, scale: 0.9, duration: 0.3, ease: 'power2.in', onComplete: () => {
                modalOverlay.classList.add('hidden');
                modal.classList.add('hidden');
                document.getElementById('modal-live-preview').querySelector('iframe').src = '';
            }});
            gsap.to(modalOverlay, { autoAlpha: 0, duration: 0.3, delay: 0.1 });
        }
        document.getElementById('modal-close-btn').addEventListener('click', closeModal);
        modalOverlay.addEventListener('click', closeModal);

        const cursorDot = document.querySelector('.cursor-dot');
        const cursorCircle = document.querySelector('.cursor-circle');
        gsap.set(cursorDot, { xPercent: -50, yPercent: -50 });
        gsap.set(cursorCircle, { xPercent: -50, yPercent: -50 });
        window.addEventListener('mousemove', e => {
            gsap.to(cursorDot, 0.1, { x: e.clientX, y: e.clientY });
            gsap.to(cursorCircle, 0.2, { x: e.clientX, y: e.clientY });
        });
        document.querySelectorAll('a, button, .project-card, .service-card, .process-card').forEach(el => {
            el.addEventListener('mouseenter', () => cursorCircle.classList.add('cursor-hover'));
            el.addEventListener('mouseleave', () => cursorCircle.classList.remove('cursor-hover'));
        });
        document.addEventListener('mousedown', () => cursorCircle.classList.add('cursor-click'));
        document.addEventListener('mouseup', () => cursorCircle.classList.remove('cursor-click'));

        gsap.registerPlugin(ScrollTrigger);
        document.querySelectorAll('section').forEach((section) => {
            const elems = section.querySelectorAll(".service-card, .project-card, .process-card, .skill-item, #contact-form > div, #contact-form > textarea, #contact-form button, #about > div > div");
            if(elems.length > 0) {
                gsap.from(elems, {
                    scrollTrigger: { trigger: section, start: "top 80%", end: "bottom 20%", toggleActions: "play reverse play reverse" },
                    y: 50, opacity: 0, stagger: 0.1, duration: 0.8
                });
            }
        });
        
        document.querySelectorAll('.skill-item').forEach(item => {
            const bar = item.querySelector('.skill-bar-fill');
            const width = bar.getAttribute('data-width');
            gsap.to(bar, {
                width: width,
                scrollTrigger: { trigger: item, start: 'top 85%', toggleActions: 'play none none none' },
                duration: 1.5,
                ease: 'power3.out'
            });
        });
        
        document.getElementById('menu-btn').addEventListener('click', () => document.getElementById('mobile-menu').classList.toggle('hidden'));
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                document.querySelector(this.getAttribute('href')).scrollIntoView({ behavior: 'smooth' });
                document.getElementById('mobile-menu').classList.add('hidden');
            });
        });

        let scene, camera, renderer, particles, mouseX = 0, mouseY = 0;
        const windowHalfX = window.innerWidth / 2;
        const windowHalfY = window.innerHeight / 2;
        function initThreeJS() {
            const canvas = document.getElementById('hero-canvas');
            if(!canvas) return;
            scene = new THREE.Scene();
            camera = new THREE.PerspectiveCamera(75, window.innerWidth / window.innerHeight, 1, 10000);
            camera.position.z = 1000;
            const particleCount = 5000;
            const particlesGeometry = new THREE.BufferGeometry();
            const posArray = new Float32Array(particleCount * 3);
            for (let i = 0; i < particleCount * 3; i++) {
                posArray[i] = (Math.random() - 0.5) * 2000;
            }
            particlesGeometry.setAttribute('position', new THREE.BufferAttribute(posArray, 3));
            const material = new THREE.PointsMaterial({ size: 1.5, color: 0xffffff, transparent: true, opacity: 0.5, blending: THREE.AdditiveBlending });
            particles = new THREE.Points(particlesGeometry, material);
            scene.add(particles);
            renderer = new THREE.WebGLRenderer({ canvas: canvas, antialias: true, alpha: true });
            renderer.setSize(window.innerWidth, window.innerHeight);
            renderer.setPixelRatio(Math.min(window.devicePixelRatio, 2));
            document.addEventListener('mousemove', e => {
                mouseX = (e.clientX - windowHalfX) / 2;
                mouseY = (e.clientY - windowHalfY) / 2;
            });
            window.addEventListener('resize', () => {
                camera.aspect = window.innerWidth / window.innerHeight;
                camera.updateProjectionMatrix();
                renderer.setSize(window.innerWidth, window.innerHeight);
            });
        }
        function animate() { if(!renderer) return; requestAnimationFrame(animate); render(); }
        function render() {
            camera.position.x += (mouseX - camera.position.x) * 0.05;
            camera.position.y += (-mouseY - camera.position.y) * 0.05;
            camera.lookAt(scene.position);
            particles.rotation.y += 0.0005;
            renderer.render(scene, camera);
        }
        initThreeJS();
        animate();
        
        fetchProjects();
        fetchTestimonials();
    </script>
</body>
</html>
